{{#link-to "book"}}
<div class="slide-out-bg"></div>
{{/link-to}}

<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book" class="btn-back"}}
      <span class="sr-only">Back</span>
    {{/link-to}}
    <div class="slide-out-heading">
      <div class="title">
        <h3>{{model.title}}</h3>

        <div class="actions">
          {{#if (can "book edit" model)}}
            {{#link-to "book.edit" model.id class="btn-pop"}}edit{{/link-to}}
          {{/if}}
          {{#if (can "book delete" model)}}
            <button class="btn-recessed" {{action "deleteBook" model}}>delete</button>
          {{/if}}
        </div>

      </div>

      <div class="details">
        <p><strong>Author:</strong> {{#link-to "author.detail" model.author.id}}{{model.author.last}}, {{model.author.first}}{{/link-to}}</p>
        <p><strong>Publish Date:</strong> {{moment-format model.publishDate "MMMM Do YYYY"}}</p>
        <p><strong>ISBN:</strong> {{model.isbn}}</p>
        <p><strong>Added By:</strong> {{model.username}}</p>
      </div>

    </div>

    {{liquid-outlet}}
  </div>
</div>

